{
  "name": "yomtor",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "esno scripts/build",
    "build:all": "npm run build all && npm run build:private",
    "build:private": "npm run build @yomtor/demos",
    "clean": "rimraf packages/*/{esm,cjs,lib,dist} packages/**/*.tsbuildinfo",
    "docs": "doctoc --title '**Table of content**' README.md",
    "lint": "eslint --ext js,ts,tsx .",
    "jest": "jest",
    "test": "npm run jest",
    "storybook": "npm run storybook -w ./examples/storybook",
    "generate": "node ./scripts/generate.js"
  },
  "dependencies": {
    "@emotion/cache": "^11.10.3",
    "@emotion/react": "11.9.3",
    "@emotion/server": "11.4.0",
    "@emotion/styled": "^11.10.0",
    "@mantine/core": "^5.4.0",
    "@mantine/hooks": "^5.4.0",
    "@mantine/ssr": "^5.4.0",
    "@mantine/styles": "^5.3.0",
    "@mantine/utils": "^5.4.0",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@sucrase/jest-plugin": "^2.1.1",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "chalk": "^5.1.0",
    "cli-progress": "^3.11.2",
    "doctoc": "~2.2.0",
    "eslint": "~8.18.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "esno": "^0.16.3",
    "execa": "^5.0.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "generate-template-files": "^3.2.0",
    "glob": "^8.0.3",
    "jest": "^27.4.5",
    "next": "^12.2.5",
    "oslllo-svg-fixer": "^2.1.0",
    "prettier": "^2.0.4",
    "rollup": "^2.50.5",
    "rollup-plugin-esbuild": "^4.2.3",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-visualizer": "^5.5.0",
    "typescript": "~4.7.0"
  },
  "resolutions": {
    "graceful-fs": "^4.2.10"
  }
}
