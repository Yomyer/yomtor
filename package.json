{
  "name": "ts-monorepo",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "clean": "pnpm run -r clean",
    "build": "pnpm run -r build",
    "lint": "eslint --ext js,ts,tsx .",
    "jest": "jest",
    "test": "yarn jest",
    "storybook": "yarn --cwd ./examples/storybook run storybook",
    "generate": "node ./scripts/generate.js"
  },
  "dependencies": {
    "@emotion/react": "11.9.3",
    "@emotion/server": "11.4.0",
    "@emotion/styled": "^11.10.0",
    "@mantine/utils": "^5.4.0",
    "@mantine/core": "^5.4.0",
    "@mantine/hooks": "^5.4.0",
    "@mantine/styles": "^5.3.0",
    "@mantine/ssr": "^5.4.0",
    "@emotion/cache": "^11.10.3",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "doctoc": "~2.2.0",
    "eslint": "~8.18.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-jest": "^27.1.1",
    "typescript": "~4.7.0",
    "prettier": "^2.0.4",
    "jest": "^27.4.5",
    "glob": "^8.0.3",
    "next": "^12.2.5",
    "@testing-library/react": "13.2.0",
    "@sucrase/jest-plugin": "^2.1.1",
    "@testing-library/jest-dom": "5.16.4",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "generate-template-files": "^3.2.0",
    "oslllo-svg-fixer": "^2.1.0",
    "cli-progress": "^3.11.2",
    "pnpm": "^7.13.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react-scripts": "^5.0.0"
      }
    }
  }
}
